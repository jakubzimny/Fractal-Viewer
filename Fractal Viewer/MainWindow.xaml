<Window x:Class="Fractal_Viewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fractal_Viewer"
        mc:Ignorable="d"
        Title="Fractal Viewer" Height="629.03" Width="1024.414"
        ResizeMode="CanMinimize"
        Icon="mandel.ico">
    <Grid RenderTransformOrigin="0.441,0.489" Margin="0,0,0,-1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="574*"/>
            <ColumnDefinition Width="66*"/>
            <ColumnDefinition Width="377*"/>
        </Grid.ColumnDefinitions>
        <Border BorderBrush="Black" BorderThickness="2" HorizontalAlignment="Left" Height="573" Margin="8,8,8,8" VerticalAlignment="Top" Width="807" Grid.ColumnSpan="3" Background="DimGray"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="569" Margin="10,10,0,0" VerticalAlignment="Top" Width="803" Grid.ColumnSpan="3"/>
        <Button x:Name="renderButton" Content="Render" HorizontalAlignment="Left" Margin="235,330,0,0" VerticalAlignment="Top" Width="74" Click="renderButton_Click" Grid.Column="2"/>
        <ComboBox x:Name="fractalCB" HorizontalAlignment="Left" Margin="193,184,0,0" VerticalAlignment="Top" Width="160" Grid.Column="2">
            <ComboBoxItem IsSelected="True">Mandelbrot Set</ComboBoxItem>
            <ComboBoxItem>Burning Ship</ComboBoxItem>
        </ComboBox>
        <Label x:Name="label" Content="Select fractal to display" HorizontalAlignment="Left" Margin="193,153,0,0" VerticalAlignment="Top" Width="160" Grid.Column="2" RenderTransformOrigin="0.475,1.423"/>
        <ComboBox x:Name="colorCB" HorizontalAlignment="Left" VerticalAlignment="Top" Width="160" Grid.Column="2" Margin="193,254,0,0">
            <ComboBoxItem IsSelected="True">1</ComboBoxItem>
            <ComboBoxItem>2</ComboBoxItem>
            <ComboBoxItem>3</ComboBoxItem>
        </ComboBox>
        <Label x:Name="label1" Content="Color scheme" Grid.Column="2" HorizontalAlignment="Left" Margin="193,223,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.408,-0.346" Width="160"/>
        <Label x:Name="label2" Content="Rendering time:" Grid.Column="2" HorizontalAlignment="Left" Margin="226,481,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.513,-0.25" Width="93"/>
        <TextBlock x:Name="timeTB" Grid.Column="2" HorizontalAlignment="Left" Margin="235,512,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="25" Width="116"><Run Text=""/></TextBlock>
        <Button x:Name="saveButton" Content="Save to file" Grid.Column="2" HorizontalAlignment="Left" Margin="235,372,0,0" VerticalAlignment="Top" Width="74" Click="saveButton_Click"/>
    </Grid>
</Window>
